@model IList<Person>
@{
    ViewData["Title"] = "Home Page";
}

<h1>Who is who?</h1>
<h2>Employee of the month</h2>
@{
    var employeeOfTheMonth = Model.FirstOrDefault();
    if (employeeOfTheMonth is not null)
    {
        <partial name="PersonCardPartial" model="employeeOfTheMonth" />
    }
}
<h2>Employees</h2>
<div class="row">
    @foreach (var person in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm m-3">
            <partial name="PersonCardPartial" model="person" />
        </div>
    }
</div>
